{{!-- profile/index --}}
{{!-- Profile Page --}}

<section id="profile" class="container mt-sm-1 mb-5">

	<div class="row justify-content-md-center">
		<div class="col-lg-5 pb-md-1 p-5 ">
			{{!-- FIXME: --}}
			<img src="images/home-page/landing7.svg" alt="landing page photo" width="100%">
		</div>

		<div class="col-lg  ml-lg-1 pt-lg-5 pr-lg-5 text-lg-left text-center">
			<h3 class="mt-4 text-dark">Hello, {{user.username}}</h3>
			<p class="mt-3 text-secondary">{{user.description}}</p>
			{{!-- TODO: add edit button --}}


			<a href="/tutorials/all" class="btn btn-outline-blue mt-3 mr-4">Let's Learn Now</a>
			<a href="/share" class="btn btn-outline-red mt-3">Share a Tutorial</a>
		</div>
	</div>
</section>

<hr>

{{!-- 3 latest post --}}
<section>
	<div class="d-flex flex-wrap justify-content-center mt-5 tutorials">

		{{#each post}}
		<div class="card p-0 pb-1 col-lg-3 col-md-5 col-sm-6 m-3 shadow-sm">

			{{!-- title --}}
			<div>
				<h4 class="{{this.color}} text-center m-3">{{this.title}}</h4>
				<img src="{{this.imgUrl}}" class="card-img-top" alt="category: {{this.category}}">
			</div>

			<div class="card-body">
				{{!-- description --}}
				<p class="card-text text-secondary">{{this.description}}
				</p>
				{{!-- category, type and duration --}}
				<p class="text-secondary-light">
					{{this.category}} | {{this.type}} | {{this.duration}} min
				</p>

				{{!-- creator --}}
				{{!-- TODO: link to creator page  --}}
				<p class="text-secondary">
					<a class="creator" href="#">{{this._creator.username}}</a> shared this
				</p>

				<div class="d-flex align-items-center justify-content-between mt-3">
					<div>
						<a href="{{this.link}}" target="_blank" class="btn btn-outline-blue">Learn now</a>
					</div>

					<div class="d-flex align-items-center">
						<a href="/tutorials/all/like/{{this._id}}" class="btn-like">
							<i class="d-block fas fa-heart fa-2x like-button text-secondary-light"
								data-tutorial-id="{{this._id}}"></i>
						</a>

						<p class="ml-3 text-secondary-light h5 mb-0">{{this.nbOfLikes}}</p>
					</div>
				</div>
			</div>
		</div>
		{{/each}}
	</div>

</section>

{{#each allCreated }}
<div class="card p-0 pb-1 col-lg-3 col-md-5 col-sm-6 m-3 shadow-sm">
	{{!-- FIXME: --}}

	<div class="w-100 reference">
		<h4 class="{{this.color}} text-center m-3">{{this.title}}</h4>
		<img src="{{this.imgUrl}}" class="card-img-top" alt="html/css w-50">
	</div>

	<div class="card-body">
		<p class="card-text text-secondary">{{this.description}}
		</p>
		<div>
			<span class="d-block text-primary-dark m-b-0">{{this.type}}</span>
			<span class="text-primary-light">{{this.duration}} min</span>
		</div>

		<div class="d-flex align-items-center justify-content-between mt-3">
			<div>
				<a href="{{this.link}}" target="_blank" class="btn btn-outline-primary">Learn now</a>
			</div>

			<form action="/tutorials/all" class="d-inline">
				<div class="d-flex align-items-center">
					<i class="d-block text-secondary-light fas fa-heart fa-2x"></i>
					<p class="ml-3 text-secondary-light h5 mb-0">{{this.nbOfLikes}}</p>
				</div>

			</form>
		</div>



	</div>
</div>
{{/each}}

</section>
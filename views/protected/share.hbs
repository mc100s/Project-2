{{!-- protected/share --}}
{{!-- let user share post --}}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-9 border shadow-sm rounded p-5">
      <h3 class="text-center text-dark mb-4">Share</h3>

      {{!-- FORM STARTS HERE (gosh bootstrap -.-) --}}
      <form action="/share" method="POST">

        {{!-- link --}}
        <div class="form-group">
          <label for="link" class="text-dark">Link</label>
          <input name="link" type="url" class="form-control" id="link"
            placeholder="Copy and paste the link of the tutorial here" required>
        </div>

        {{!-- title --}}
        <div class="form-group">
          <label for="title" class="text-dark">Title</label>
          <input name="title" type="text" class="form-control" id="title" placeholder="Enter the title of the tutorial">
        </div>

        {{!-- description --}}
        <div class="form-group">
          <label for="description" class="text-dark">Description</label>
          <textarea class="form-control" name="description" id="description" rows="3" maxlength="80"
            placeholder="Tell us what is the tutorial about (max 80 characters)"></textarea>
        </div>

        {{!-- type --}}
        <div class="form-group">
          <label for="" class="text-dark">Type</label>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="type" id="type" value="article">
            <label class="form-check-label" for="type">
              Article
            </label>
          </div>

          <div class="form-check">
            <input class="form-check-input" type="radio" name="type" id="type" value="article">
            <label class="form-check-label" for="type">
              Article
            </label>
          </div>
        </div>


        {{#if message}}
        <div class="bg-danger rounded">
          <p class="p-2 text-center text-light">{{message}}</p>
        </div>
        {{/if}}

        <div class="mt-5 mb-4 text-center">
          <button type="submit" class="btn pl-5 pr-5 btn-outline-blue">Submit</button>
        </div>

        <div class="text-center">
          <p class="text-secondary">Don't have an account yet? <a href="/auth/signup">Register here!</a> </p>
        </div>
      </form>
    </div>
  </div>
</div>
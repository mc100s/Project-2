{{!-- protected/share --}}
{{!-- let user share post --}}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-7 col-md-9 border shadow-sm rounded p-5">
      <h3 class="text-center text-dark mb-4">Share</h3>

      {{!-- FORM STARTS HERE (gosh bootstrap -.-) --}}
      <form action="/share" method="POST">

        {{!-- link --}}
        <div class="form-group">
          <label for="link" class="text-blue">Link:</label>
          <input name="link" type="url" class="form-control" id="link" placeholder="Copy and paste the link of the tutorial here"
            required>
        </div>

        {{!-- title --}}
        <div class="form-group">
          <label for="title" class="text-blue">Title:</label>
          <input name="title" type="text" class="form-control" id="title" placeholder="Enter the title of the tutorial"
            required>
        </div>

        {{!-- description --}}
        <div class="form-group">
          <label for="description" class="text-blue">Description:</label>
          <textarea class="form-control" name="description" id="description" rows="3" maxlength="120" required
            placeholder="Tell us what is the tutorial about (max 120 characters)"></textarea>
        </div>

        {{!-- categories goshhhhhhhh!!!! --}}
        <div class="mb-3">
          <p class="mb-2 text-blue">Categories:</p>

          <div class="form-check form-check-inline mb-2">
            {{!-- hidden trick --}}
            <input class="form-check-input" type="hidden" value="" name="categories">

            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="html-css" name="categories" value="html/css" checked>
              <label class="form-check-label" for="html-css">HTML/CSS</label>
            </div>

            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="javascript" name="categories" value="javascript">
              <label class="form-check-label" for="javascript">Javascript</label>
            </div>

            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="react" name="categories" value="react">
              <label class="form-check-label" for="react">React</label>
            </div>
          </div>

          <div class="form-check form-check-inline">
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="nodejs" name="categories" value="nodejs">
              <label class="form-check-label" for="nodejs">Node.js</label>
            </div>

            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="express" name="categories" value="express">
              <label class="form-check-label" for="express">Express</label>
            </div>

            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="mongodb" name="categories" value="mongodb">
              <label class="form-check-label" for="mongodb">MongoDB<label>
            </div>
          </div>
        </div>


        {{!-- type --}}
        <div class="mb-3">
          <p class="mb-2 text-blue">Type:</p>
          <div class="form-check-inline">
            <input class="form-check-input" type="radio" name="type" id="type" value="article" checked>
            <label class="form-check-label" for="type">
              Article
            </label>
          </div>

          <div class="form-check-inline">
            <input class="form-check-input" type="radio" name="type" id="type" value="video">
            <label class="form-check-label" for="type">
              Video
            </label>
          </div>
        </div>

        {{!-- duration --}}
        <div class="form-group">
          <label for="duration" class="text-blue">Duration</label>
          <input name="duration" type="number" class="form-control" id="duration" required
            placeholder="Time read for article / Duration of the video (in minutes)">
        </div>

        {{!-- error message --}}
        {{#if message}}
        <div class="bg-danger rounded">
          <p class="p-2 text-center text-light">{{message}}</p>
        </div>
        {{/if}}

        <div class="mt-5 mb-4 text-center">
          <button type="submit" class="btn pl-5 pr-5 btn-outline-blue">Share</button>
        </div>

      </form>
    </div>
  </div>
</div>